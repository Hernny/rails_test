<div class="row container">
  <div class="col s4 offset-s4">
    <div class="center">
      <i class="large material-icons">account_circle</i>
      <h1>Sign Up</h1>
    </div>
    <%= form_for @user do |f| %>
      <div>
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true %>
      </div>
      <div>
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>
      <div>
        <div>
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>
        <div>
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation %>
        </div>
      </div>
      <div>
        <%= button_tag(type: 'submit', class: "waves-effect waves-light btn") do %>
          SIGN UP<i class="material-icons right">add_circle</i>
        <% end %>
        <%= link_to '<button type="button" class="right waves-effect waves-light btn">LOG IN<i class="material-icons right">send</i></button>'.html_safe, login_path %>
      </div>
    <% end %>
  </div>
</div>
